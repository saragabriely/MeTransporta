<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="Teste03.Views.LgColetas">

    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource Default}" >

        <Grid x:Name="Grid01" RowSpacing="-1" ColumnSpacing="0" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="72" />
                <ColumnDefinition  Width="72" />
                <ColumnDefinition  Width="72" />
                <ColumnDefinition  Width="72" />
                <ColumnDefinition  Width="72" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions >
                <RowDefinition Height="65"  />
                <RowDefinition Height="454" />
                <RowDefinition Height="50"  />
            </Grid.RowDefinitions>

            <!-- Me Transporta -->
            <StackLayout  Orientation="Horizontal"           HeightRequest="90"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                          HorizontalOptions="FillAndExpand"  VerticalOptions="Center" BackgroundColor="{StaticResource Blue}" Spacing="-15"   >

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="72" />
                        <ColumnDefinition  Width="72" />
                        <ColumnDefinition  Width="72" />
                        <ColumnDefinition  Width="52" />
                        <ColumnDefinition  Width="28" />
                    </Grid.ColumnDefinitions>

                    <Label Text="MeTransporta" TextColor="{StaticResource WhiteBtn}" FontSize="19" WidthRequest="100"
                           VerticalTextAlignment="Center"  HorizontalTextAlignment="End"  VerticalOptions="Center"
                           Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" />

                    <Image Source="moving.png" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="33" WidthRequest="33"
                           Grid.Column="3" Grid.Row="0"  />

                </Grid>

            </StackLayout>

            <!--  Me Transporta - ->
            <Label  Text="MeTransporta"
                    TextColor="{StaticResource WhiteBtn}"   BackgroundColor="{StaticResource Blue}" 
                    HorizontalOptions="FillAndExpand"       VerticalOptions="Center" 
                    VerticalTextAlignment="Center"          HorizontalTextAlignment="Center"
                    FontSize="19"                           HeightRequest="75"
                    Grid.Row="0"   Grid.Column="0" Grid.ColumnSpan="5" />
            -->

            <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="20"  HorizontalOptions="Center" >

                <StackLayout HeightRequest="40" >
                    
                    <!-- COLETAS -->
                    <Label  Text="COLETAS"  FontSize="16"   FontAttributes="Bold"  TextColor="{StaticResource Blue}" 
                        HorizontalTextAlignment="Center"  VerticalTextAlignment="Center"  HeightRequest="60"  />

                </StackLayout>

                <!-- * CLIENTE * -->
                <StackLayout x:Name="slCliente" IsVisible="False" >

                    <!-- BOTÕES - CLIENTE -->
                    <StackLayout x:Name="stBtnCliente" Margin="15" Spacing="10" VerticalOptions="Center">

                        <Label Text="Cadastre novas coletas!" HorizontalOptions="Center" FontSize="12" />

                        <!-- Btn - Cadastrar Coletas -->
                        <Button x:Name="btnClienteCadastrarColeta" Text="Cadastrar Coleta" Clicked="BtnCadastrarColeta_Clicked"  
                                BackgroundColor="{StaticResource BlueBtn}" TextColor="{StaticResource White}"
                                WidthRequest="300" FontSize="12"  />

                        <Label Text="Veja o histórico de coletas" HorizontalOptions="Center" FontSize="12" />
                        
                        <!-- Btn - Pesquisar Coletas -->
                        <Button x:Name="btnClientePesquisarColeta" Text="Histórico de Coletas" Clicked="BtnPesquisarColeta_Clicked" 
                                BackgroundColor="{StaticResource MotoristaBtn}" TextColor="{StaticResource White}" 
                                WidthRequest="300" FontSize="12"/>

                        <Label Text="Acompanhe coleta(s) em andamento!" HorizontalOptions="Center" FontSize="12" />
                        <!-- Btn - Acompanhar Coletas -->
                        <Button x:Name="btnClienteAcompanharColeta" Text="Acompanhar Coleta" Clicked="BtnAcompanharColeta_Clicked"  
                                BackgroundColor="{StaticResource BlueBtn}" TextColor="{StaticResource White}"
                                WidthRequest="300" FontSize="12" />
                        
                    </StackLayout>
                  
                    <!-- FILTRO - CLIENTE -->
                    <StackLayout x:Name="stFiltrarColetas" IsVisible="false" Spacing="10"  >

                        <Picker x:Name="etClienteFiltroColeta" Title="Escolha uma das opções" FontSize="12"
                                HeightRequest="60" SelectedIndexChanged="pckFiltroColeta_Cliente" TextColor="{StaticResource SilverTxt}"  />

                    </StackLayout>
                  
                    <!--  LISTA -->
                    <StackLayout x:Name="stLista" IsVisible="false" >

                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition  Width="110" />
                          <ColumnDefinition  Width="190" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions >
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                          <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <Label x:Name="lbIdColeta"   Text="Apelido "   FontSize="12" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" 
                               VerticalTextAlignment="Center" TextColor="{StaticResource Blue}" />

                        <Label x:Name="lbApelido"    Text="Status "    FontSize="12" FontAttributes="Bold" Grid.Column="1" Grid.Row="0"
                               VerticalTextAlignment="Center" TextColor="{StaticResource Blue}" />
  
                        <!-- Todas as coletas -->                      
                        <Label x:Name="lbListaVazia_"  FontSize="12" 
                               Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" IsVisible="false"  />

                        <!-- LIST VIEW -->
                        <ListView x:Name="LstColeta" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="8"
                                  ItemSelected="LstColeta_ItemSelected" IsVisible="true" >
                          <ListView.ItemTemplate>
                            <DataTemplate>
                              <ViewCell>
                                <StackLayout Orientation="Horizontal" WidthRequest="300" VerticalOptions="CenterAndExpand"
                                             Padding="5"  >

                                  <Grid>
                                    <Grid.ColumnDefinitions>
                                      <ColumnDefinition  Width="100"  />
                                      <ColumnDefinition  Width="120" />
                                      <ColumnDefinition  Width="60"  />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions > <RowDefinition Height="32" />
                                    </Grid.RowDefinitions>

                                    <Label x:Name="llApelido"    Text="{Binding ApelidoColeta}"  FontSize="12" Grid.Column="0" Grid.Row="0" 
                                           VerticalTextAlignment="Center" />
                                    
                                    <Label x:Name="llStatus"     Text="{Binding DescricaoStatus}" FontSize="12" Grid.Column="1" Grid.Row="0"
                                           VerticalTextAlignment="Center" />
                                    
                                    <!--
                                    <Label x:Name="llORcamentos"                                 FontSize="12" Grid.Column="2" Grid.Row="0" 
                                           VerticalTextAlignment="Center" /> -->

                                  </Grid>

                                </StackLayout>
                              </ViewCell>
                            </DataTemplate>
                          </ListView.ItemTemplate>
                        </ListView>

                      </Grid>      
                  
                    </StackLayout>

                    <!-- CLIENTE - CADASTRAR COLETA -->
                    <StackLayout x:Name="slClienteCadastrarColeta" IsVisible="False" >
                        
                        <!-- Botões -->
                        <StackLayout Orientation="Horizontal" Spacing="2" IsVisible="True">

                            <!-- Dados Material -->
                            <Button  x:Name="btnDadosMaterial" Text="Material" WidthRequest="76" FontSize="08" IsEnabled="True" HeightRequest="40"
                                 TextColor="{StaticResource Blue}" BackgroundColor="{StaticResource WhiteBtn}" FontAttributes="Bold" />

                            <!-- Endereço Retirada -->
                            <Button x:Name="btnEnderecoRetirada" Text="Endereço Retirada" WidthRequest="82" FontSize="08" IsEnabled="False" HeightRequest="40"
                                TextColor="{StaticResource Blue}" BackgroundColor="{StaticResource WhiteBtn}" FontAttributes="Bold" />

                            <!-- Endereço Entrega -->
                            <Button x:Name="btnEnderecoEntrega" Text="Endereço Entrega" WidthRequest="82" FontSize="08" HeightRequest="40"
                                IsEnabled="False" TextColor="{StaticResource Blue}" BackgroundColor="{StaticResource WhiteBtn}" FontAttributes="Bold" />

                            <!--  Valor  -->
                            <Button  x:Name="btnValor"  Text="Valor" WidthRequest="82" FontSize="08" IsEnabled="False" HeightRequest="40"
                                 TextColor="{StaticResource Blue}" BackgroundColor="{StaticResource WhiteBtn}" FontAttributes="Bold" />

                        </StackLayout>

                        <!-- Cadastro - Coleta -->
                        <Grid x:Name="Grid02" RowSpacing="-2" ColumnSpacing="-1"  >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="50" />
                                <ColumnDefinition  Width="50" />
                                <ColumnDefinition  Width="48" />
                                <ColumnDefinition  Width="48" />
                                <ColumnDefinition  Width="45" />
                                <ColumnDefinition  Width="30" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions >
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="36" />
                                <RowDefinition Height="8"  />
                                <RowDefinition Height="38" />
                            </Grid.RowDefinitions>

                            <!-- * MATERIAL * -->

                            <!-- Tipo de material -->
                            <Label x:Name="lblTipoMaterial" Text="Tipo de Material" FontSize="12" FontAttributes="Bold" 
                               Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" IsVisible="True"  VerticalOptions="Center" />

                            <Entry x:Name="etTipoMaterial" Placeholder="Tipo de material" FontSize="12" IsVisible="True"
                               Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="5" VerticalOptions="StartAndExpand" MaxLength="20"  />

                            <!-- Fragilidade do material -->
                            <Label x:Name="lblFragilidadeMaterial" Text="Fragilidade" FontSize="12" FontAttributes="Bold" 
                               Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" IsVisible="True"  VerticalOptions="Center" />

                            <Entry x:Name="etFragilidadeMaterial" Placeholder="Fragilidade material" FontSize="12" MaxLength="15"
                               Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="5" IsVisible="True" VerticalOptions="StartAndExpand" />

                            <!-- Descricao do material -->
                            <Label x:Name="lblDescricaoMaterial" Text="Descricao do Material" FontSize="12" FontAttributes="Bold" 
                               Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="7" IsVisible="True" VerticalOptions="Center" />

                            <Editor x:Name="etDescricaoMaterial" FontSize="12" IsVisible="True"   MaxLength="300"
                               Grid.Column="0" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="7" 
                               VerticalOptions="Center" HeightRequest="100" BackgroundColor="{StaticResource WhiteBtn}" />

                            <!-- Peso do material -->
                            <Label x:Name="lblPeso" Text="Peso" FontSize="12" FontAttributes="Bold" IsVisible="True" 
                               Grid.Column="0" Grid.Row="6" VerticalOptions="Center" />

                            <Entry x:Name="etPeso" Placeholder="0kg" FontSize="12"  IsVisible="True" Keyboard="Numeric" MaxLength="6"
                               Grid.Column="1" Grid.Row="6" HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" />

                            <Label x:Name="lblPeso2" Text="Kg" FontSize="12" FontAttributes="Bold" IsVisible="True" 
                               Grid.Column="2" Grid.Row="6" VerticalOptions="Center" />

                            <!-- Volume -->
                            <Label x:Name="lblVolume" Text="Volumes" FontSize="12" FontAttributes="Bold" IsVisible="True" 
                               Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="2" VerticalOptions="Center" />

                            <Entry x:Name="etVolume" Placeholder="10" FontSize="12"  IsVisible="True" Keyboard="Numeric" MaxLength="5"
                               Grid.Column="5" Grid.Row="6" Grid.ColumnSpan="2" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center" />

                            <!-- Dimensões do material -->

                            <!-- Largura -->
                            <Label x:Name="lblLargura" Text="Largura" FontSize="12" FontAttributes="Bold" IsVisible="True" 
                               Grid.Column="0" Grid.Row="7" VerticalOptions="Center" />

                            <Entry x:Name="etLargura" Placeholder="0000" FontSize="12" IsVisible="True" Keyboard="Numeric" MaxLength="6"
                               Grid.Column="1" Grid.Row="7" HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" />

                            <Label x:Name="lblLargura2" Text="m" FontSize="12"  IsVisible="True" 
                               Grid.Column="2" Grid.Row="7" VerticalOptions="Center" />

                            <!-- Altura -->
                            <Label x:Name="lblAltura" Text="Altura" FontSize="12" FontAttributes="Bold" IsVisible="True" 
                               Grid.Column="3" Grid.Row="7" VerticalOptions="Center" />

                            <Entry x:Name="etAltura" Placeholder="0000" FontSize="12" IsVisible="True" Keyboard="Numeric" MaxLength="6"
                                   Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="2" VerticalOptions="StartAndExpand" />

                            <Label x:Name="lblAltura2" Text="m" FontSize="12"  IsVisible="True" 
                                   Grid.Column="6" Grid.Row="7" VerticalOptions="Center" />


                            <!-- * ENDEREÇO DE RETIRADA * -->

                            <!-- CEP -->
                            <Label x:Name="lblEndRetCep" Text="CEP" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="0" Grid.Row="0" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndRetCep" Placeholder="00000-000" FontSize="12" IsVisible="False" 
                                   Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"  VerticalOptions="CenterAndExpand"
                                   HorizontalTextAlignment="Center" Keyboard="Numeric" MaxLength="8" />

                            <!-- UF -->
                            <Label x:Name="lblEndRetUf" Text="UF" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="3" Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

                            <Entry  x:Name="etEndRetUf"  Placeholder="UF"  FontSize="12" IsVisible="False" 
                                    Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2"  VerticalOptions="CenterAndExpand"  
                                    HorizontalTextAlignment="Center"  MaxLength="2" />

                            <!-- Endereco -->
                            <Label x:Name="lblEndRet" Text="Endereço de Retirada" FontSize="12" FontAttributes="Bold" IsVisible="False"
                                   Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6"  VerticalOptions="EndAndExpand" />

                            <Entry x:Name="etEndRet" Placeholder="Digite o endereço de retirada" FontSize="12" IsVisible="False" 
                                   Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="7" VerticalOptions="StartAndExpand" MaxLength="40"  />

                            <!-- Número -->
                            <Label  x:Name="lblEndRetNumero" Text="Nº"  FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                    Grid.Column="0" Grid.Row="3" VerticalOptions="CenterAndExpand"  />

                            <Entry  x:Name="etEndRetNumero"  Placeholder="Nº"  FontSize="12" WidthRequest="60" IsVisible="False" 
                                    Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Keyboard="Numeric" MaxLength="5"
                                    VerticalOptions="EndAndExpand" HorizontalTextAlignment="Center"   />

                            <!-- Complemento -->
                            <Label  x:Name="lblEndRetCompl" Text="Compl." FontSize="12" FontAttributes="Bold"  
                                    IsVisible="False" Grid.Column="3" Grid.Row="3"  
                                    VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

                            <Entry  x:Name="etEndRetCompl" Placeholder="Digite o compl." FontSize="12" IsVisible="False" 
                                    Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="3" VerticalOptions="EndAndExpand" MaxLength="20" />

                            <!-- Bairro -->
                            <Label  x:Name="lblEndRetBairro" Text="Bairro" FontSize="12" FontAttributes="Bold"  
                                    IsVisible="False" Grid.Column="0" Grid.Row="4" VerticalOptions="CenterAndExpand" />

                            <Entry  x:Name="etEndRetBairro" Placeholder="Digite o Bairro" FontSize="12" IsVisible="False" 
                                    Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="6" VerticalOptions="EndAndExpand" MaxLength="30" />

                            <!-- Cidade -->
                            <Label x:Name="lblEndRetCidade" Text="Cidade" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="5"   VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndRetCidade" Placeholder="Digite a Cidade" FontSize="12" IsVisible="False" 
                                   Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="6" VerticalOptions="CenterAndExpand" MaxLength="30" />

                            <!-- Nome do responsável -->
                            <Label x:Name="lblEndRetResponsavel" Text="Responsável pela entrega" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" VerticalOptions="EndAndExpand" />

                            <Entry x:Name="etEndRetResponsavel" Placeholder="Nome do responsável" FontSize="12" IsVisible="False" 
                                   Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="4"  VerticalOptions="CenterAndExpand" MaxLength="30"/>

                            <!-- Telefone do responsável -->
                            <Label x:Name="lblEndRetResponsavelTel" Text="Telefone do responsável" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="4" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndRetResponsavelTel" Placeholder="(00)00000-0000" FontSize="12" IsVisible="False"
                                    Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="3" MaxLength="11"
                                    VerticalOptions="CenterAndExpand" Keyboard="Telephone"/>


                            <!-- * ENDEREÇO DE ENTREGA * -->

                            <!-- CEP -->
                            <Label x:Name="lblEndEntCep" Text="CEP" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="0" Grid.Row="0" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndEntCep" Placeholder="00000-000"  FontSize="12" IsVisible="False" 
                                   Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"  VerticalOptions="CenterAndExpand"
                                   HorizontalTextAlignment="Center" Keyboard="Numeric" MaxLength="8" />

                            <!-- UF -->
                            <Label x:Name="lblEndEntUf" Text="UF" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="3" Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

                            <Entry  x:Name="etEndEntUf"  Placeholder="UF"  FontSize="12" IsVisible="False" 
                                    Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2"  VerticalOptions="CenterAndExpand"  
                                    HorizontalTextAlignment="Center" MaxLength="2" />

                            <!-- Endereco -->
                            <Label x:Name="lblEndEnt" Text="Endereço de Entrega" FontSize="12" FontAttributes="Bold" 
                                   IsVisible="False" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" VerticalOptions="EndAndExpand" />

                            <Entry x:Name="etEndEnt"  Placeholder="Digite o endereço de entrega" FontSize="12" IsVisible="False" 
                                   Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="7" VerticalOptions="StartAndExpand" MaxLength="30" />

                            <!-- Número -->
                            <Label  x:Name="lblEndEntNumero" Text="Nº"  FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                    Grid.Column="0" Grid.Row="3"   VerticalOptions="CenterAndExpand"  />

                            <Entry  x:Name="etEndEntNumero"  Placeholder="Nº"  FontSize="12" WidthRequest="60" IsVisible="False" 
                                    Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" MaxLength="6"
                                    VerticalOptions="EndAndExpand" HorizontalTextAlignment="Center" Keyboard="Numeric" />

                            <!-- Complemento -->
                            <Label x:Name="lblEndEntCompl" Text="Compl." FontSize="12" FontAttributes="Bold" IsVisible="False" 
                                   Grid.Column="3" Grid.Row="3" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

                            <Entry x:Name="etEndEntCompl" Placeholder="Digite o compl." FontSize="12" IsVisible="False" 
                                   Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="3" VerticalOptions="EndAndExpand" MaxLength="10" />

                            <!-- Bairro -->
                            <Label  x:Name="lblEndEntBairro" Text="Bairro" FontSize="12" FontAttributes="Bold"  
                                    IsVisible="False" Grid.Column="0" Grid.Row="4" VerticalOptions="CenterAndExpand" />

                            <Entry  x:Name="etEndEntBairro" Placeholder="Digite o Bairro" FontSize="12" IsVisible="False" 
                                    Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="6" VerticalOptions="EndAndExpand" MaxLength="30"/>

                            <!-- Cidade -->
                            <Label x:Name="lblEndEntCidade" Text="Cidade" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="5"   VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndEntCidade" Placeholder="Digite a Cidade" FontSize="12" IsVisible="False" 
                                   Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="6" VerticalOptions="CenterAndExpand" MaxLength="30"/>

                            <!-- Nome do responsável -->
                            <Label x:Name="lblEndEntResponsavel" Text="Responsável pelo recebimento" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" VerticalOptions="EndAndExpand" />

                            <Entry x:Name="etEndEntResponsavel" Placeholder="Nome do responsável" FontSize="12" IsVisible="False" 
                                   Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="5"  VerticalOptions="CenterAndExpand" MaxLength="20"
                                   HorizontalTextAlignment="Center"   />

                            <!-- Telefone do responsável -->
                            <Label x:Name="lblEndEntResponsavelTel" Text="Telefone do responsável" FontSize="12" FontAttributes="Bold"  
                                   IsVisible="False" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="4" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etEndEntResponsavelTel" Placeholder="(00)00000-0000" FontSize="12" IsVisible="False"
                                    Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="3"  HorizontalTextAlignment="Center"
                                    VerticalOptions="CenterAndExpand" Keyboard="Telephone" MaxLength="11" />

                            <!-- * VALOR * -->

                            <!-- Data máxima -->
                            <Label x:Name="lblDataMax" Text="Data limite para entrega" FontSize="12" FontAttributes="Bold" IsVisible="False"
                                   Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etDataMax" Placeholder="00/00/0000" FontSize="12" IsVisible="False"
                                    Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="3"  HorizontalTextAlignment="Center"
                                    VerticalOptions="CenterAndExpand" MaxLength="10" />

                            <!-- Horário -->
                            <Label x:Name="lblHorario" Text="Horário limite" FontSize="12" FontAttributes="Bold" IsVisible="False"
                                   Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etHorario" Placeholder="00" FontSize="12" IsVisible="False" HorizontalTextAlignment="Center"
                                    Grid.Column="2" Grid.Row="1" VerticalOptions="CenterAndExpand" Keyboard="Numeric" MaxLength="2" />

                            <Label x:Name="lblHorarioMeio" Text=":" FontSize="12"  IsVisible="False"
                                   Grid.Column="3" Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

                            <Entry x:Name="etHorario2" Placeholder="00" FontSize="12" IsVisible="False" HorizontalTextAlignment="Center"
                                   Grid.Column="4" Grid.Row="1" VerticalOptions="CenterAndExpand" Keyboard="Numeric" MaxLength="2" />

                            <!-- Valor pretendido -->
                            <Label x:Name="lblValorPretendido" Text="Valor que pretende pagar" FontSize="12" FontAttributes="Bold" 
                                   IsVisible="False" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" VerticalOptions="CenterAndExpand" />

                            <Label x:Name="lblValorRS" Text="R$" FontSize="12"  IsVisible="False"
                                   Grid.Column="4" Grid.Row="2" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

                            <Entry x:Name="etValorPretendido" Placeholder="000,00" FontSize="12" IsVisible="False"
                                    Grid.Column="5" Grid.Row="2" Grid.ColumnSpan="2"   HorizontalTextAlignment="Center"
                                    VerticalOptions="CenterAndExpand" Keyboard="Numeric" MaxLength="10" />

                            <!-- Observações -->
                            <Label x:Name="lblObservacoes" Text="Observações" FontSize="12" FontAttributes="Bold" IsVisible="False"
                                   Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" VerticalOptions="CenterAndExpand" />

                            <Editor x:Name="etObservacoes"  FontSize="12"  IsVisible="False" BackgroundColor="{StaticResource WhiteBtn}"
                                   Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="7" Grid.RowSpan="2" 
                                   VerticalOptions="StartAndExpand" HeightRequest="100" MaxLength="150"  />

                            <!-- Apelido da coleta -->
                            <Label x:Name="lblApelido" Text="Apelido" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="0" Grid.Row="6"  VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etApelido" Placeholder="Apelido da Coleta" FontSize="12" IsVisible="False"
                                    Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="5"   HorizontalTextAlignment="Center"
                                    VerticalOptions="CenterAndExpand" MaxLength="15" />

                            <!-- Tipo de veículo -->
                            <Label x:Name="lblTipoVeiculo" Text="Tipo de Veículo" FontSize="12" FontAttributes="Bold"  IsVisible="False"
                                   Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2"  VerticalOptions="CenterAndExpand" />

                            <Entry x:Name="etTipoVeiculo" Placeholder="Caminhão / Carro / Moto ..." FontSize="12" IsVisible="False"
