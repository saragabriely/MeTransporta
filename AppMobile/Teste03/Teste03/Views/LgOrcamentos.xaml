                                  Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="6" HeightRequest="30" /> 
                              <!--  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="6" -->
                            
                            <!-- Btn - Retirado  -->
                            <Button x:Name="btnRetirado" Text="Material retirado" BackgroundColor="{StaticResource BlueBtn}" IsVisible="false"
                                  TextColor="White" Clicked="btnRetirado_Clicked" FontSize="12"  HeightRequest="38"
                                  Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="6"
                                  />
                              
                              
                            <!-- LOCAL DE ENTREGA -->
                            <Label x:Name="lbEtapa02" Text="Etapa 02: "  Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2"
                                 FontSize="14" VerticalTextAlignment="Center"   IsVisible="false"
                                 FontAttributes="Bold"  TextColor="{StaticResource Blue}"  />
                            
                            <!-- Btn - Retirada de material  -->
                            <Button x:Name="btnEntregar" Text="Ir para local de entrega" BackgroundColor="{StaticResource Blue}" IsVisible="false"
                                  TextColor="White" Clicked="BtnEntregar_Clicked" FontSize="12"  HeightRequest="38"
                                  Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="6"  /> 
                              
                            <!-- Btn - Finalizar  -->
                            <Button x:Name="btnFinalizar" Text="Entregue!" BackgroundColor="{StaticResource GreenBtn}"  IsVisible="false"
                                  TextColor="White" Clicked="BtnFinalizar_Clicked" FontSize="12"  HeightRequest="38"
                                  Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="6" />

                            <!-- Contato Cliente -->
                            <Label x:Name="lbLigar" Text="Ligar para cliente" TextColor="{StaticResource GreenBtn}"  HorizontalTextAlignment="End" 
                                   Grid.Column="4" Grid.Row="9" Grid.ColumnSpan="3" FontSize="15" VerticalOptions="End" >
                                 <Label.GestureRecognizers>
                                     <TapGestureRecognizer Tapped="BtnLigarCliente" NumberOfTapsRequired="1" />
                                 </Label.GestureRecognizers>
                            </Label>
                                                   
                            <!-- Desistir -->
                            <Label x:Name="lbDesistir" Text="Desistir" TextColor="{StaticResource Red}"  HorizontalTextAlignment="End" 
                                   Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="2" FontSize="15" VerticalOptions="End" >
                                
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="BtnDesistir" NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                                
                            </Label>
                             
                            <!-- VOLTAR - BUSCA -->
                            <StackLayout x:Name="stBtnVoltar_Moto_"  IsVisible="true" Grid.Column="0" Grid.Row="9"
                                   VerticalOptions="End" >

                              <StackLayout.GestureRecognizers> <TapGestureRecognizer Tapped="BtnVoltar_Moto_Clicked" NumberOfTapsRequired="1" />
                              </StackLayout.GestureRecognizers>

                                <Image Source="btnVoltar3.png" VerticalOptions="End" HorizontalOptions="CenterAndExpand"
                                     HeightRequest="35" WidthRequest="35" />
                         </StackLayout>
                            
                            
                         </Grid> 
                    
                        <!-- Mostra valor final e finaliza -->
                        <Grid x:Name="gridValor" IsVisible ="False" > <!-- VerticalOptions="Start" -->

                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                           <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                           <RowDefinition Height="40" />  
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                           <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                      
                            <!-- Label - Realizar cobrança -->
                            <Label x:Name="lbFinal" Text="Coleta finalizada com sucesso!" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" 
                                   FontSize="16"  HorizontalTextAlignment="Center" VerticalOptions="Center" FontAttributes="Bold"
                                   VerticalTextAlignment="Center" TextColor="{StaticResource GreenBtn}" />
                           
                           <!-- Valor_Final -->
                           <Label x:Name="lbValor_Final" Text="Valor total da coleta" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" FontSize="15"
                                  HorizontalTextAlignment="Center" VerticalOptions="Center" VerticalTextAlignment="Center" WidthRequest="40" />
                           
                            <!-- Valor_Final -->
                           <Label x:Name="lbValorRS_Final" Text="R$" Grid.Column="0" Grid.Row="2" FontSize="15"
                                   HorizontalTextAlignment="Center" VerticalOptions="Center"  VerticalTextAlignment="Center" />                        
                           
                           <Label x:Name="lblValor_Final"  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" FontSize="16" 
                                 HorizontalTextAlignment="Center" HeightRequest="32"  VerticalOptions="Center"
                                 VerticalTextAlignment="Center"   BackgroundColor="{StaticResource WhiteBtn}"  />

                           <!-- Agradecimento -->
                            <Label x:Name="lbAgradecimento" Text="Agradecemos pela preferência! Obrigada :D " 
                                   Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="7"
                                  FontSize="14" HorizontalTextAlignment="Center" VerticalOptions="Center"  VerticalTextAlignment="Center" />

                            <!-- REALIZAR COBRANÇA / finaliza todo o processo de entrega)  -->
                            <Button x:Name="btnRealizarCobrança" Text="Finalizar" BackgroundColor="{StaticResource Blue}"
                                    Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="7"  TextColor="White"  IsVisible="True"
                                    FontSize="12" Clicked="BtnRealizarCobranca_Motorista_Clicked" /> 
                      
                     </Grid>
                
                    </StackLayout>
                                  
                </StackLayout>

            
        </StackLayout>
            
            <!-- Botões - Navegação -->

            <!-- HOME -->
            <StackLayout Grid.Row="2"  Grid.Column="0" Spacing="-3"  VerticalOptions="Center" >

                <StackLayout.GestureRecognizers> <TapGestureRecognizer Tapped="BtnHome_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="home.png"    VerticalOptions="End"     HorizontalOptions="CenterAndExpand"
                       HeightRequest="24"   WidthRequest="24"  />

                <Label Text="Página Inicial" FontSize="10" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center"  />

            </StackLayout>

            <!-- COLETAS -->
            <StackLayout Grid.Row="2"  Grid.Column="1" Spacing="-3" VerticalOptions="Center" >

                <StackLayout.GestureRecognizers> <TapGestureRecognizer Tapped="BtnColetas_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="car.png"     VerticalOptions="End"  HorizontalOptions="CenterAndExpand"
                       HeightRequest="24"   WidthRequest="24"   />

                <Label Text="Coletas" FontSize="10" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center" />

            </StackLayout>

            <!-- PESQUISAR -->
            <StackLayout Grid.Row="2"  Grid.Column="2" Spacing="-3" IsVisible="False"  >

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnPesquisar_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="pesquisar.png"     VerticalOptions="End"  HorizontalOptions="CenterAndExpand"
                       HeightRequest="26"   WidthRequest="26"   />

                <Label Text="Pesquisar" FontSize="10" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center" />

            </StackLayout>

            <!-- CHAT -->
            <StackLayout Grid.Row="2"  Grid.Column="2" Spacing="-3" VerticalOptions="Center"  >

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnChat_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="chat.png"     VerticalOptions="Center"  HorizontalOptions="CenterAndExpand"
                       HeightRequest="26"   WidthRequest="26"   />

                <Label Text="Chat" FontSize="10" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center" />

            </StackLayout>

            <!-- ORÇAMENTOS -->
            <StackLayout Grid.Row="2"  Grid.Column="3"  Spacing="-3" VerticalOptions="Center" >

                <StackLayout.GestureRecognizers> <TapGestureRecognizer Tapped="BtnOrcamentos_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="orcamentosB.png"    VerticalOptions="End"  HorizontalOptions="CenterAndExpand"
                       HeightRequest="24"  WidthRequest="24"   />

                <Label Text="Orçamentos" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource Blue}" 
                       VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center" />

            </StackLayout>

            <!-- MINHA CONTA -->
            <StackLayout Grid.Row="2"  Grid.Column="4"  Spacing="-3" VerticalOptions="Center">

                <StackLayout.GestureRecognizers><TapGestureRecognizer Tapped="BtnMinhaConta_Clicked" NumberOfTapsRequired="1" />
                </StackLayout.GestureRecognizers>

                <Image Source="minhaconta.png" VerticalOptions="End" HorizontalOptions="CenterAndExpand"
                       HeightRequest="24"    WidthRequest="24"   />

                <Label Text="MinhaConta" FontSize="10" VerticalOptions="StartAndExpand" HorizontalTextAlignment="Center"  />

            </StackLayout>

        </Grid>
      

    </AbsoluteLayout>
